  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Lato:wght@400&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400&700&display=swap" rel="stylesheet">
  <title>Login</title>
  <script type="module" crossorigin src="/assets/main-8232ebba.js"></script>
  <link rel="stylesheet" href="/assets/index-6bacb779.css">
</head>
<body>
  <header>
    <div class="navbar" style="padding-bottom: 1.6rem">
      <div class="wrapper">
        <h3 class="nav-text">Ochre & Ivy</h3>
        <div class="nav-text-spacer"></div>
      </div>
      <button type="button" class=""><span class="nav-menu-btn material-symbols-outlined">menu</span></button>
      <nav class="nav-menu">
        <ul class="nav-list">
          <li class="nav-item"><a href="/">Home</a></li>
          <li class="nav-item"><a href="#">Recipes</a></li>
          <li class="nav-item"><a href="/blog">Blog</a></li>
          <li class="nav-item"><a href="#">About</a></li>
        </ul>
      </nav>
    </div>
  </header>
  <main>
    <section id="login-main">
      <div class="container">
        <h1 class="login-title">Welcome Back!</h1>
        <h3 class="login-subtitle">Login to your account</h3>
        <div class="wrapper">
          <form class="login-form" action="/api/login" method="POST" id="login-form">
            <div class="input-section">
              <label for="email">Email</label>
              <input id="login-email" class="input" type="email" name="email" placeholder="example@email.com" required>
              <p id="login-email-validation" for="email"></p>
            </div>
            <div class="input-section">
              <label for="password">Password</label>
                <input id="login-password" class="input" type="password" name="password" placeholder="Password" required>
                <span id="login-password-visibility-toggle" class="material-symbols-outlined">visibility_off</span>
                <p id="login-password-validation" for="password"></p>
              </div>
            <input class="login-button" type="submit" value="Login">
          </form>
        </div>
        <p class="signup-ref">Don't have an account? <a href="/signup">Register</a></p>
      </div>
    </section>
  </main>
</body>
<script>
const emailInputSignup = document.getElementById('login-email');
const passwordInput = document.getElementById('login-password');
const passwordVisibiltyToggler = document.getElementById('login-password-visibility-toggle');

const emailValidationMessage = document.getElementById('login-email-validation');
const passwordValidationMessage = document.getElementById('login-password-validation');

emailInputSignup.addEventListener("input", checkEmail);
passwordVisibiltyToggler.addEventListener("click", togglePasswordVisibility);

function checkEmail() {
  var validRegex = /^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$/;

  if (emailInputSignup.value.match(validRegex)) {
    emailValidationMessage.style.display = "";
    emailValidationMessage.innerHTML = "";

    emailInputSignup.setCustomValidity("");
  }
  else {
    emailInputSignup.setCustomValidity("Please enter a valid email address.");
    emailValidationMessage.innerHTML = "Please enter a valid email address.";

    emailValidationMessage.style.display = "block";
  }
}

function togglePasswordVisibility() {
  if (passwordInput.type === "password") {
    passwordInput.type = "text";
    passwordVisibiltyToggler.innerHTML = "visibility";
  }
  else {
    passwordInput.type = "password";
    passwordVisibiltyToggler.innerHTML = "visibility_off";
  }
}
</script>
</html>
