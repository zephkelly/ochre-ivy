<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <link rel="icon" type="image/svg+xml" href="/vite.svg" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Lato:wght@400&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400&700&display=swap" rel="stylesheet">
  <title>Blog | Home</title>
  <script type="module" crossorigin src="/main.js"></script>
  <link rel="stylesheet" href="/index.css">
</head>
<body>
  <header>
    <div class="navbar">
      <div class="wrapper">
        <h3 class="nav-text">Ochre & Ivy</h3>
        <div class="nav-text-spacer"></div>
      </div>
      <button type="button" class=""><span class="nav-menu-btn material-symbols-outlined">menu</span></button>
      <nav class="nav-menu">
        <ul class="nav-list">
          <li class="nav-item"><a href="/">Home</a></li>
          <li class="nav-item"><a href="#">Recipes</a></li>
          <li class="nav-item"><a href="">Blog</a></li>
          <li class="nav-item"><a href="#">About</a></li>
        </ul>
      </nav>
    </div>
  </header>
  <main>
    <section id="blogs-featured">
      <div class="container">
        <h2 class="featured-title">FEATURED</h2>
        <% for (i = 0; i < featuredBlogs.length; i++) { %>
          <% const blog = featuredBlogs[i]; %>
          <div class="featured-blog" style="opacity: 0; display: none;">
            <div class="content">
              <div class="wrapper">
                <h3 class="blog-title"><%= blog.title %></h3>
                <h6 class="blog-subtitle"><%= blog.subtitle %></h6>
                <p class="blog-date"><%= blog.createdDate %></p>
              </div>
              <div class="wrapper">
                <p class="blog-description"><%= blog.description %></p>
                <a href="/blog/<%= blog.uri %>" class="blog-link">Read more</a>
              </div>
            </div>
            <div class="cover-img">
              <img src='<%- blog.cover %>' alt="<%= blog.title %>" class="blog-image">
            </div>
          </div>
        <% }; %>   
        <nav class="featured-nav">
          <ul class="featured-nav-list">
            <li class="featured-nav-item"><a class="featured-blog-link"></a></li>
            <li class="featured-nav-item"><a class="featured-blog-link active"></a></li>
            <li class="featured-nav-item"><a class="featured-blog-link"></a></li>
          </ul>
        </nav>  
      </div>
      <div class="blogs-featured-bgBox"></div>
    </section>
    <section id="blogs-recent-popular">
      <div class="container">
        <section id="blogs-recent">
          <div class="blog-hero-content">
            <h2 class="recent-title">Recent</h2>
          </div>
        </section>
        <section id="blogs-popular">
          <div class="blog-hero-content">
            <h2 class="recent-title">Popular</h2>
          </div>
        </section>
      </div>
    </section>
  </main>
  <footer id="footer-main">
    <div class="container">
      <section class="footer-links">
        <nav>
          <ul class="footer-nav-menu">
            <li class="footer-nav-item"><a href="/">Home</a></li>
            <li class="footer-nav-item"><a href="#">Recipes</a></li>
            <li class="footer-nav-item"><a href="">Blog</a></li>
            <li class="footer-nav-item"><a href="#">About</a></li>
          </ul>
        </nav>
        <nav>
          <h3>Socials</h3>
          <ul class="footer-socials-menu">
            <li class="footer-socials-item"><a href="instagram.com">Instagram</a></li>
          </ul>
        </nav>
        <form action="post" id="footer-contact-form">
          <h3>Send me a message</h3>
          <input type="text">
          <input type="text">
          <input type="button" value="Send">
        </form>
      </section>
    </div>
  </footer>
</body>
<script>
  // Format descriptions
  const blogDescription = document.querySelectorAll('.blog-description');

  for (i = 0; i < blogDescription.length; i++) {
    const blogDescriptionText = blogDescription[i].innerText;
    const description = formatDescription(blogDescriptionText);
    blogDescription[i].innerText = description;
  }

  function formatDescription(description) {
    let sanitisedDescription = null;

    sanitisedDescription = description.replace(/<br>/g, '');
    sanitisedDescription = sanitisedDescription.replace(/(\r\n|\n|\r)/gm, '');
    sanitisedDescription = sanitisedDescription.replace(/<script>.*<\/script>/g, '');

    if (sanitisedDescription.length > 300) {
      sanitisedDescription = sanitisedDescription.slice(0, 400);

      //Remove last word if cut in the middle
      if (sanitisedDescription.charAt(sanitisedDescription.length - 1) != ' ') {
        sanitisedDescription = sanitisedDescription.slice(0, sanitisedDescription.lastIndexOf(' '));
      }

      sanitisedDescription = sanitisedDescription + '...';
    }

    return sanitisedDescription;
  }

  // Format date
  const blogCreatedDate = document.querySelectorAll('.blog-date');

  for (i = 0; i < blogCreatedDate.length; i++) {
    const blogCreatedDateText = blogCreatedDate[i].innerText;
    const date = formatDate(blogCreatedDateText);
    blogCreatedDate[i].innerText = date;
  }

  function formatDate(date) {
    var date = new Date(date);
    date.toLocaleDateString('en-GB');
    date = date.toDateString();

    date = date.slice(4);
    date = date.slice(0, 6) + "," + date.slice(6);

    return date;
  }

  // Carousel featured blogs
  const featuredBlogs = document.querySelectorAll('.featured-blog');
  const featuredBlogLinks = document.querySelectorAll('.featured-blog-link');

  let interval = setInterval(showFeaturedBlog, 6500);

  featuredBlogLinks.forEach((link) => {
    link.addEventListener('click', () => {
      featuredBlogs[currentFeaturedBlog].style.opacity = '0';
      featuredBlogLinks[currentFeaturedBlog].classList.remove('active');

      currentFeaturedBlog = Array.from(featuredBlogLinks).indexOf(link);

      featuredBlogs[currentFeaturedBlog].style.opacity = '1';
      featuredBlogLinks[currentFeaturedBlog].classList.add('active');

      clearInterval(interval);

      setTimeout(() => { 
        clearInterval(interval);
        interval = setInterval(showFeaturedBlog, 6500);
      }, 3500);
    });
  });

  let lastFeaturedBlog = featuredBlogs.length - 1;
  let currentFeaturedBlog = 0;

  function showFeaturedBlog() {
    lastFeaturedBlog = currentFeaturedBlog;

    featuredBlogLinks[lastFeaturedBlog].classList.remove('active');
    featuredBlogs[lastFeaturedBlog].style.opacity = 0;

    setTimeout(() => {
      featuredBlogs[lastFeaturedBlog].style.display = 'none';
    }, 500)
    
    currentFeaturedBlog = (currentFeaturedBlog + 1) % featuredBlogs.length;
    
    featuredBlogs[currentFeaturedBlog].style.display = 'flex';

    setTimeout(() => {
      featuredBlogs[currentFeaturedBlog].style.opacity = 1;
    }, 5)

    featuredBlogLinks[currentFeaturedBlog].classList.add('active');
  }

  showFeaturedBlog();
</script>
</html>