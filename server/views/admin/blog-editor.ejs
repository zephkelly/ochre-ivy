<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head.ejs') %>
  <script type="module" crossorigin src="/admin.js"></script>
  <script type="module" crossorigin src="/blogEditor.js"></script>
</head>
<body>
  <%- include('../partials/navbar.ejs') %>
  <main>
    <section id="link-section">
      <div class="section-container">
        <a href="/dashboard">Dashboard</a> > <a>Blog</a> > <a class="active dashboard-nav-link">New</a>
      </div>
    </section>
    <section id="editor-section">
      <div class="section-container">
        <div class="wrapper">
          <h3 class="editor-title">Create new blog</h3>
          <button id="save-button">Post blog</button>
        </div>
        <p id="post-response"></p>
        <form id="blog-new-form">
          <div class="wrapper">
            <div class="input-section">
              <label for="uri">URI</label>
              <input type="text" name="uri" id="uri-input" placeholder="my-first-blog">
              <p id="uri-input-validation"></p>
            </div>
            <div class="input-section">
              <label for="createdDate">Created Date (yyyy/mm/dd)</label>
              <input type="text" placeholder="Bank for current date" name="createdDate" id="createdDate-input">
              <p id="date-input-validation"></p>
            </div>
          </div>
          <div class="input-section">
            <label for="title">Title</label>
            <input type="text" name="title" id="title-input" placeholder="Title">
            <p id="title-input-validation"></p>
          </div>
          <div class="input-section">
            <label for="subtitle">Subtitle</label>
            <input type="text" name="subtitle" id="subtitle-input"  placeholder="Subtitle">
          </div>
          <div class="input-section">
            <label for="tags">Tags</label>
            <input type="text" name="tags" id="tags-input" placeholder="Tags">
            <p id="tags-input-validation"></p>
          </div>
          <label class="editor-label" for="editorjs">Content</label>
          <div class="editor-input">
            <div id="editorjs"></div>
          </div>
        </form>
      </div>
    </section>
  </main>
</body>
</html>